# ===== API КЛЮЧИ =====

# ВЫБЕРИ ОДИН из вариантов ниже:

# Вариант 1: OpenRouter (РЕКОМЕНДУЕТСЯ) - получишь 5$ бесплатно
OPENROUTER_API_KEY=sk-or-YOUR-KEY-HERE
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Вариант 2: Together.ai (полностью бесплатно)
# TOGETHER_API_KEY=YOUR-KEY-HERE

# Вариант 3: Ollama (локально, БЕЗ КЛЮЧА)
# OLLAMA_BASE_URL=http://localhost:11434

# Вариант 4: Anthropic Claude (оригинальный)
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# ===== DATABASE =====

# ВЫБЕРИ ОДИН из вариантов:

# Вариант 1: Neon.tech (облако, бесплатно) - РЕКОМЕНДУЕТСЯ
DATABASE_URL=postgresql://user:password@ep-YOUR-id.us-east-1.aws.neon.tech/3d_print_assistant?sslmode=require

# Вариант 2: Локально (после установки PostgreSQL)
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
# POSTGRES_DB=3d_print_assistant
# POSTGRES_USER=3dp_user
# POSTGRES_PASSWORD=secure_password

# ===== REDIS =====
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# ===== CHROMADB =====
CHROMA_PERSIST_DIR=./data/chroma

# ===== STORAGE =====
STORAGE_TYPE=local
S3_BUCKET_NAME=printer-ai-storage
S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# ===== HARDWARE APIs =====
KLIPPER_API_URL=http://localhost:7125
OCTOPRINT_API_URL=http://localhost:5000
OCTOPRINT_API_KEY=

# ===== ПРИЛОЖЕНИЕ =====
DEBUG=True
LOG_LEVEL=DEBUG
API_PORT=8000

# ===== ВЫБОР ПРОВАЙДЕРА =====
# "openrouter", "together", "ollama", или "anthropic"
LLM_PROVIDER=openrouter
